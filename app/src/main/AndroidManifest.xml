<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quandoo.reservations">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".ReservationsApplication"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.customerlist.CustomerListActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.tablechoosing.TableChoosingActivity"
                android:parentActivityName=".ui.customerlist.CustomerListActivity">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".ui.customerlist.CustomerListActivity"
            android:screenOrientation="portrait"/>
        </activity>
    </application>

</manifest>